<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="isVisible"
            type="boolean"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="@{isVisible ? View.VISIBLE : View.GONE}"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/f144"
            android:layout_height="@dimen/f260"
            android:src="@drawable/ic_listnone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f86"
            android:textColor="@color/color8"
            android:layout_gravity="center"
            android:textSize="@dimen/f70"
            android:text="@string/empty_my_poem"/>

    </LinearLayout>
</layout>