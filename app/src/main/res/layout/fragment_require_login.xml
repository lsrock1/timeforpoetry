<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingStart="@dimen/f60"
    android:paddingEnd="@dimen/f60"
    tools:context=".view.mainViewPager.RequireLoginFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15.5sp"
        android:text="로그인이 필요한 서비스입니다" />

    <Button
        android:id="@+id/my_poem_empty_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/f180"
        android:layout_marginTop="@dimen/f88"
        android:background="@drawable/color2btn"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/login"/>

</LinearLayout>
