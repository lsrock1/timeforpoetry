<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.ViewGroup.LayoutParams"/>
        <import type="android.view.View"/>
        <import type="com.timeofpoetry.timeofpoetry.timeofpoetry.model.PlayBackStateModel"/>
        <variable
            name="viewModel"
            type="com.timeofpoetry.timeofpoetry.timeofpoetry.viewmodel.MainActivityViewModel"/>
        <variable
            name="poem"
            type="com.timeofpoetry.timeofpoetry.timeofpoetry.data.PoetryClass.Poem"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.timeofpoetry.timeofpoetry.timeofpoetry.view.MainActivity"
        android:orientation="vertical"
        tools:showIn="@layout/app_bar_main">

        <FrameLayout
            android:visibility="@{viewModel.isMainShow ? View.VISIBLE : View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <fragment
                android:id="@+id/mainView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.timeofpoetry.timeofpoetry.timeofpoetry.view.mainViewPager.MainView"/>
        </FrameLayout>

        <FrameLayout
            tools:visibility="gone"
            app:footerVisible="@{viewModel.isListFragShow}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <fragment
                android:id="@+id/playList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.timeofpoetry.timeofpoetry.timeofpoetry.view.footer.MyPlayListFragment"/>
        </FrameLayout>

        <FrameLayout
            app:footerVisible="@{viewModel.isPlayerShow}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <fragment
                android:id="@+id/playerfrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.timeofpoetry.timeofpoetry.timeofpoetry.view.footer.PlayerFragment"/>
        </FrameLayout>

        <FrameLayout
            app:footerVisible="@{viewModel.isLyricShow}"
            tools:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <fragment
                android:id="@+id/lyric"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.timeofpoetry.timeofpoetry.timeofpoetry.view.footer.LyricsFragment"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="@{viewModel.isLyricShow || viewModel.isPlayerShow ? @dimen/f575 : @dimen/f270, default = @dimen/f270}"
            android:paddingStart="@{viewModel.isLyricShow || viewModel.isPlayerShow ? @dimen/f120 : 0f}"
            android:paddingEnd="@{viewModel.isLyricShow || viewModel.isPlayerShow ? @dimen/f120 : 0f}"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/content_main_playlist_btn"
                android:id="@+id/playlistButton"
                android:layout_width="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f191, default = @dimen/f191}"
                android:layout_weight="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 1 : 0}"
                android:layout_height="match_parent"
                android:paddingStart="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f60, default = @dimen/f60}"
                android:paddingEnd="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f20, default = @dimen/f20}"
                android:paddingTop="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85, default = @dimen/f85}"
                android:paddingBottom="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85, default = @dimen/f85}"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{() -> viewModel.onListClick()}"
                android:src="@{viewModel.isLyricShow || viewModel.isPlayerShow ? @drawable/player_list_off : @drawable/footer_list_off}" />

            <LinearLayout
                android:id="@+id/playInfo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="@dimen/f20"
                android:paddingEnd="0dp"
                android:onClick="@{() -> viewModel.onPlayInfoClick()}"
                android:visibility="@{viewModel.isLyricShow || viewModel.isPlayerShow ? View.GONE : View.VISIBLE}">

                <ImageView
                    android:contentDescription="@string/artwork"
                    android:paddingTop="@dimen/f50"
                    android:paddingBottom="@dimen/f50"
                    android:layout_width="@dimen/f140"
                    android:layout_height="match_parent"
                    app:loadImage="@{poem.artworkUrl}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/f50"
                    android:paddingBottom="@dimen/f50"
                    android:paddingStart="@dimen/f52"
                    android:paddingEnd="13dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@{poem.poem}"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:gravity="center_vertical"
                        android:textColor="@color/color8"
                        android:layout_marginBottom="@dimen/f12"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        app:onSelected="@{true}"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/f12"
                        android:orientation="horizontal">

                        <ImageView
                            android:contentDescription="@string/content_main_pencil_ic"
                            android:layout_width="@dimen/f34"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/f14"
                            android:src="@drawable/ic_autuor"/>
                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="@dimen/f180"
                            android:text="@{poem.poet}"
                            android:singleLine="true"
                            android:textColor="@color/color8"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:gravity="center_vertical|start"
                            android:textSize="12sp"/>
                        <ImageView
                            android:contentDescription="@string/mic_ic"
                            android:layout_width="@dimen/f34"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_speaker"/>
                        <TextView
                            android:id="@+id/txt_voice"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/f14"
                            android:text="@{poem.voice}"
                            android:gravity="center_vertical|start"
                            android:singleLine="true"
                            android:textColor="@color/color7"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/play_control"
                android:layout_width="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0 : LayoutParams.WRAP_CONTENT, default = wrap_content}"
                android:layout_height="match_parent"
                android:layout_weight="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 4 : 0}"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="@string/content_main_rewind"
                    android:id="@+id/rewind"
                    android:layout_width="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f167, default = @dimen/f167}"
                    android:layout_height="match_parent"
                    android:layout_weight="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 1 : 0}"
                    android:src="@{viewModel.isLyricShow || viewModel.isPlayerShow ? @drawable/player_prev_off : @drawable/footer_prev_off}"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85}"
                    android:paddingBottom="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85}"
                    android:paddingStart="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f50}"
                    android:paddingEnd="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f50}"/>

                <ImageView
                    android:id="@+id/play"
                    android:contentDescription="@string/content_main_play"
                    android:layout_width="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f167, default = @dimen/f167}"
                    android:layout_height="match_parent"
                    android:layout_weight="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 1 : 0}"
                    android:src="@{viewModel.isLyricShow || viewModel.isPlayerShow ? @drawable/player_play_off : @drawable/footer_play_off}"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85}"
                    android:paddingBottom="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85}"
                    android:paddingStart="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f50}"
                    android:paddingEnd="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f50}"
                    android:visibility="@{viewModel.viewState == PlayBackStateModel.PAUSE || viewModel.viewState == PlayBackStateModel.STOP ? View.VISIBLE : View.GONE}"/>

                <ImageView
                    android:contentDescription="@string/content_main_pause"
                    tools:visibility="gone"
                    android:id="@+id/pause"
                    android:layout_width="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f167, default = @dimen/f167}"
                    android:layout_height="match_parent"
                    android:layout_weight="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 1 : 0}"
                    android:src="@{viewModel.isLyricShow || viewModel.isPlayerShow ? @drawable/player_pause_off : @drawable/footer_pause_off}"
                    android:visibility="@{viewModel.viewState == PlayBackStateModel.PLAYING ? View.VISIBLE : View.GONE}"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85}"
                    android:paddingBottom="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85}"
                    android:paddingStart="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f50}"
                    android:paddingEnd="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f50}" />
                <RelativeLayout
                    android:layout_width="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f167, default = @dimen/f167}"
                    android:layout_weight="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 1 : 0}"
                    android:layout_height="match_parent"
                    android:visibility="@{viewModel.viewState == PlayBackStateModel.BUFFERING ? View.VISIBLE : View.GONE}"
                    android:paddingTop="@dimen/f85"
                    android:paddingBottom="@dimen/f85"
                    android:paddingStart="@dimen/f50"
                    android:paddingEnd="@dimen/f50">
                    <com.github.ybq.android.spinkit.SpinKitView
                        style="@style/SpinKitView.Small.Circle"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:SpinKit_Color="@color/black" />
                </RelativeLayout>

                <ImageView
                    android:contentDescription="@string/content_main_forward"
                    android:id="@+id/forward"
                    android:layout_width="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f202, default = @dimen/f202}"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 1 : 0}"
                    android:src="@{viewModel.isLyricShow || viewModel.isPlayerShow ? @drawable/player_next_off : @drawable/footer_next_off}"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85}"
                    android:paddingBottom="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85}"
                    android:paddingStart="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f50}"
                    android:paddingEnd="@{viewModel.isLyricShow || viewModel.isPlayerShow ? 0f : @dimen/f85}"/>

                <ImageView
                    android:contentDescription="@string/content_main_repeat"
                    tools:visibility="gone"
                    android:visibility="@{viewModel.isLyricShow || viewModel.isPlayerShow ? View.VISIBLE : View.GONE}"
                    android:onClick="@{() -> viewModel.onModeClick()}"
                    app:mode="@{viewModel.currentMode}"
                    android:id="@+id/repeatMode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_repeat_all"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>